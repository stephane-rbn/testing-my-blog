<h1>Articles</h1>

<ul>
<% @articles.each do |article| %>
  <li>
    <%= article.title %>
    <%= link_to 'Show', article %>
    <% if user_signed_in? %>
       | <%= link_to 'Edit', edit_article_path(article), class: "edit-link" %> |
      <%= link_to 'Delete', article_path(article), method: :delete %>
    <% end %>
  </li>
<% end %>
</ul>

<% if user_signed_in? %>
  <%= link_to 'New', new_article_path %>
<% end %>
